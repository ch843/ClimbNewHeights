@{
	ViewData["Title"] = "Book";
}

<div class="container">
    <h3>Price Calculator</h3>
    <form class="container">
        <div class="row">
            <div class="form-group col-md-3">
                <label for="numSessions">Number of sessions</label>
                <input type="number" class="form-control" id="numSessions" aria-describedby="sessions" step="1" placeholder="0">
                <small id="sessions" class="form-text text-muted">Each session is two hours long</small>
            </div>
            <div class="form-group col-md-3">
                <label for="sessionRate">Rate per session</label>
                <input type="number" class="form-control" id="sessionRate" value="60" placeholder="$60" readonly>
            </div>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="applyDiscount">
            <label class="form-check-label" for="applyDiscount">Check for semi-private discount (2 people)</label>
        </div><br/>
        <button type="button" id="calculate" class="btn btn-primary button">Calculate</button><br/>
        <br/>
        <div class="form-group">
            <small>It is $60 /person for a private session.</small><br />
            <small>Get a 10% discount per person with a semi-private session.</small><br />
            <small>To see skill and technique improvement, I recommend doing 5-10 sessions.</small>
        </div><br/>
    </form>
    <p id="price"></p>
    <b>Call to book now at (800)-NEW-CLIMB</b>
</div>